{
  "name": "nf/banner",

  "title": "Banner",
  "icon": "dashicons-cover-image",
  "category": "media",

  "supports": {
     "align": false,
     "html": false
  },

  "attributes": {
    "align":          { "type": "string", "default": "full" },
    "color":        { "type": "string" },
    "heading":        { "type": "string" },
    "content":        { "type": "string" },
    "background_id":  { "type": "integer" }, 
    "background_url": { "type": "string" },
    "subheading":        { "type": "string" },
    "button_text":        { "type": "string" },
    "button_link":        { "type": "string" }
  },

  "example": {
    "attributes": {
      "heading": "Hello World",
      "content": "What a wonderful day!"
    }
  },

  "styles": [
    { "name": "default", "label": "Default", "isDefault": true },
    { "name": "swoop", "label": "Swoop" }
  ]

}
