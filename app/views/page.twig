{% set template = 'page' %} 
{% extends "base.twig" %}

{% block content %}
  {% for post in posts %}
    <article class="content post-type-{{post.post_type}} {% if post.meta('hide_title') %}hide-title{% endif %}" id="post-{{post.ID}}">
      <h1 class="page-title">{{ post.title }}</h1>
      {{post.content}}
    </article>
  {% endfor %}
{% endblock %}
